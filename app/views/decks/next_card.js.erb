var loader = document.querySelector('.loader-wrapper');
var englishText = document.querySelector(".english-text");
var kanaText = document.querySelector(".kana-text");
var previousAudioSampleAudio = document.querySelector(".audio-sample audio");
var moveDecksForm = document.querySelector(".move-decks-form");
var editCardButton = document.querySelector(".card-edit-button");

loader.classList.remove("is-active");
englishText.innerHTML = "<%= @current_card.english %>"
kanaText.innerHTML = "<%= @current_card.kana %>"

if (previousAudioSampleAudio) {
  previousAudioSampleAudio.parentElement.removeChild(previousAudioSampleAudio);
}
<% if @current_card.audio_sample.attached? %>
  document.querySelector(".audio-sample").insertAdjacentHTML("beforeend", "<audio controls><source src='<%= url_for(@current_card.audio_sample) %>' type='audio/mpeg'>Your browser does not support the audio tag.</audio>");
<% end %>

document.querySelector(".new-deck-select").value = "";
moveDecksForm.action = "<%= move_decks_card_path(@current_card.id) %>";
editCardButton.href = "<%= edit_card_url(@current_card.id) %>";
